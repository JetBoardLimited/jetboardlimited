doctype html

head
  title Jetboard Limited
  meta(charset='utf-8')
  meta(name='description' content='A jetboarding company based in Brighton. We sell, hire and teach jetboards. We also do brand partnerships.')
  link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato|Open+Sans")
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/entypo-fontello/0.1/entypo.css")
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css")
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/jquery.slick/1.6.0/slick-theme.css")
  link(rel="stylesheet" href="https://assets.juicer.io/embed.css")
  link(rel="stylesheet" href="/stylesheets/entypo.css")
  link(rel="stylesheet" href="/stylesheets/layout.css")
  block custom-styles
body
  header#main-header
    a#main-logo(href='/')
      img(src='/images/company-logo.png' alt='Missing Logo')
    nav#main-nav
      ul
        li: a.nav-item(href='/') HOME
        li: a.nav-item(href='/boards') BOARDS
        li: a.nav-item(href='/lessons') LESSONS
        li: a.nav-item(href='/partnerships') PARTNERSHIPS
        li: a.nav-item(href='/under-construction') COUNTRY
        li: a.nav-item(href='/under-construction') HISTORY
      ul
        li: a.nav-item(href='#{forumUrl}') FORUM
        li: a.nav-item(href='/under-construction') CONTACT US
        li: a.nav-item(href='/about') ABOUT
      .search-box
        input(type='text' placeholder='Search' onkeydown="if (event.keyCode == 13) { window.location.href = '/under-construction'; }")
        a.entypo-search(href='/under-construction')
  main#main-content
    .motosurf-logo: a(href='https://www.motosurfnation.com' target='_blank')
      img(src='https://www.motosurfnation.com/images/logo.png' height='75px')
    block main-content
  footer#main-footer
    #main-share-container
      nav: ul#main-share
        li: a.nav-item.entypo-facebook(href='https://facebook.com/Jet.Board.Limited.Jetsurf')
        li: a.nav-item.entypo-twitter(href='https://twitter.com/jetboardlimited')
        li: a.nav-item.entypo-gplus(href='https://plus.google.com/104230879418632683498')
    #main-small-container
      ul#main-small
        li.entypo-phone +44 0800 464 0410
        li.entypo-mail info@jetboardlimited.com
        li.entypo-location 15 New Broadway, Worthing
      p.copyright Copyright Â© 2016 Jet Board Limited
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery-migrate/3.0.0/jquery-migrate.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.js")
  script(src="https://assets.juicer.io/embed.js")
  script(src="https://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5907cf48d3290eda")
  block custom-scripts
