extends ./board-layout.pug

block board-content
  .home-navigation
    span
      a(href="/"): span.entypo-home
      span.entypo-right-open-mini
      a(href="/boards") Boards
      span.entypo-right-open-mini
      a(href="#") Jetsurf Ultrasport

  .board-main
    .board-media-gallery
      .board-media-gallery-preview
        div.item: img(src="/images/jetsurf-Ultrasport-Harlequin.jpg" height="500px")
        div.item: img(src="/images/jetsurf-Ultrasport-CrystalPurple.jpg" height="500px")
      .board-media-gallery-controls
        div.item: img(src="/images/jetsurf-Ultrasport-Harlequin.jpg" height="100px")
        div.item: img(src="/images/jetsurf-Ultrasport-CrystalPurple.jpg" height="100px")

    .board-information
      h1.board-title Jetsurf Ultrasport
      p.board-overview The Jetsurf Ultrasport is designed for all riders. This model is durable, reliable and has a smaller engine to maximize fuel efficiency for a fun riding experience for all.
      .addthis_inline_share_toolbox
