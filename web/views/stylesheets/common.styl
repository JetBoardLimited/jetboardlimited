@media (max-width: 1590px)
  .intro
    background-size 550px, contain

    .intro-title
      font-size 65px

@media (max-width: 1280px)
  .intro
    height 700px
    background-size 520px, contain

    &:after
      margin-top: 220px

    .intro-title
      font-size 52px

    .intro-buttons
        .intro-browse
          width 270px
          height 70px
          font-size 19px
          line-height 35px

  .board-list
    ul
      .board-item
        width 33%
        img
          width 120px

  #main-share
    li
      height 50px
      width 50px
      line-height 50px

      > .nav-item
        font-size 25px

@media (max-width: 1180px)
  .intro
    height 600px
    background-size 420px, contain

    &:after
      margin-top: 120px

    .intro-title
      font-size 48px

    .intro-buttons
        .intro-browse
          width 270px
          height 70px
          font-size 19px
          line-height 35px

  .board-list
    ul
      .board-item
        width 50%
        img
          width 150px
