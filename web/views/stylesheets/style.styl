@import 'nib/normalize'
 
normalize-css()

// Load Icon Fonts
[class*="entypo-"]:before
  font-family 'entypo', sans-serif
  padding 1px 12px

body
  font-family 'Open Sans', sans-serif

#main-header
  display flex
  height 100px
  justify-content space-between
  align-items center
  padding 0 50px

#main-nav
  display flex
  font-family 'Lato', sans-serif
  list-style-type none
  padding 0
  margin 0

  li > .nav-item
    padding 15px
    font-size 18px
    font-weight 300
    text-decoration none
    color black

#main-share-container
  font-family 'Lato', sans-serif
  text-align center
  padding 30px 0
  font-size 24px
  color black
  
#main-share
  display flex
  list-style-type none
  padding 0 0 20px 0
  margin 0
  justify-content center

  > li
    background-color rgb(29, 32, 38)
    margin 0 20px
    border-radius 50px
    
    height 75px
    width 75px
    line-height 75px
    
    > .nav-item
      text-decoration none
      color white
      font-size 35px
    
#main-small-container
  display flex
  flex-flow column
  justify-content space-between
  font-family 'Lato', sans-serif
  background-color rgb(29, 32, 38)
  text-align center
  padding 40px 0 10px 0
  font-size 18px
  color white
  height 100px
  
#main-small
  display flex
  list-style-type none
  margin 0
  padding 0
  font-size 24px
  
  > li
    display flex
    flex-grow 1
    justify-content center
    width 0

    &:before
      color #53B3CB
      
.intro
  height 750px
  width 100%
  background-image url('/images/main-background.png')
  background-size 800px, contain
  background-repeat no-repeat
  background-position top 70px right 50px
  padding-top 250px
    
  .intro-title
    font-family 'Lato', sans-serif
    font-size 80px
    font-weight 300
    color rgb(29, 32, 38)
    margin 0 0 50px 65px
    
  .intro-buttons
    margin 0 0 0 65px

