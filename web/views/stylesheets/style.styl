@import 'nib/normalize'
 
normalize-css()

// Load Icon Fonts
[class*="entypo-"]:before
  font-family 'entypo', sans-serif
  padding 0 10px

@font-face
  font-family 'si'
  src url('../images/socicon.eot')
  src url('../images/socicon.eot?#iefix') format('embedded-opentype'),
    url('../images/socicon.woff') format('woff'),
    url('../images/socicon.ttf') format('truetype'),
    url('../images/socicon.svg#icomoonregular') format('svg')
  font-weight normal
  font-style normal

@font-face
  font-family si
  src url(../images/socicon.svg) format(svg)

body
  font-family 'Open Sans', sans-serif
  
.soc
  overflow hidden
  margin 0
  padding 0
  list-style none
  
  li
    display inline-block
    *display inline
    zoom 1
    a
      font-family si!important
      font-style normal
      font-weight 400
      -webkit-font-smoothing antialiased
      -moz-osx-font-smoothing grayscale
      -webkit-box-sizing border-box
      -moz-box-sizing border-box
      -ms-box-sizing border-box
      -o-box-sizing border-box
      box-sizing border-box
      -o-transition .1s
      -ms-transition .1s
      -moz-transition .1s
      -webkit-transition .1s
      transition .1s
      -webkit-transition-property transform
      transition-property transform
      -webkit-transform translateZ(0)
      transform translateZ(0)
      overflow hidden
      text-decoration none
      text-align center
      display block
      position relative
      z-index 1
      width 60px
      height 60px
      line-height 60px
      font-size 33px
      -webkit-border-radius 46px
      -moz-border-radius 46px
      border-radius 46px
      margin-right 50px
      color #ffffff
      background-color none

.soc-icon-last
  margin 0 !important

.soc-facebook
  background-color #3e5b98
  &:before
    content '\e041'
  &:hover
    background-color #2a4784

.soc-twitter
  background-color #4da7de
  &:before
    content '\e040'
  &:hover
    background-color #3993ca

.soc-googleplus
  background-color #dd4b39
  &:before
    content '\e042'
  &:hover
    background-color #c93725

#main-header
  display flex
  height 100px
  justify-content space-between
  align-items center
  padding 0 50px

#main-nav
  display flex
  font-family 'Lato', sans-serif
  list-style-type none
  padding 0
  margin 0

  .nav-item
    padding 15px
    font-size 18px
    font-weight 300
    text-decoration none
    color black

#main-share-container
  height 160px
  font-family 'Lato', sans-serif
  background-color rgb(29, 32, 38)
  text-align center
  padding 5px 0
  font-size 28px
  color white
  
#main-share
  display flex
  list-style-type none
  padding 0
  margin 0
  justify-content center

  .nav-item
    padding 15px
    text-decoration none
    
#main-small-container
  display flex
  flex-flow column
  justify-content space-between
  font-family 'Lato', sans-serif
  background-color rgb(29, 32, 38)
  text-align center
  padding 5px 0
  font-size 18px
  color white
  height 100px
  
#main-small
  display flex
  list-style-type none
  margin 0
  padding 0
  font-size 28px
  justify-content space-around
    
#main-content
  height 1000px
