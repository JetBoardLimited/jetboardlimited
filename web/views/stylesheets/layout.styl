@require 'common'

body
  font-family 'Open Sans', sans-serif
  min-width: 1080px;

#main-header
  display block
  padding 2em
  background-color: #101215

#main-logo
  display block
  text-align center
  padding 0 0 2em 0

  > img
    height: 6em

.search-box
  display flex
  margin-top 3rem
  justify-content center

  > input
    width 40rem
    height 2rem
    font-size 1.5rem
    color white
    background-color  #101215
    border 1px solid #101215
    border-color  #101215 #101215 white #101215

    &:focus
      outline none

  > .entypo-search
    color white
    font-size 1.5rem
    text-decoration none

#main-nav > ul
  display flex
  justify-content center
  font-family 'Lato', sans-serif
  list-style-type none
  padding 0
  margin 0

  li > .nav-item
    padding 1.5em
    font-size 0.8rem
    font-weight 300
    text-decoration none
    color white
    letter-spacing 3px

#main-footer
  background-color #101215

#main-share-container
  font-family 'Lato', sans-serif
  padding 4em 0 1em 0
  text-align center
  color black

#main-share
  display flex
  list-style-type none
  padding 0
  margin 0
  justify-content center

  > li
    display flex
    background-color white
    margin 0 1em
    border-radius 2em
    justify-content center
    align-items center
    height 4em
    width 4em

    > .nav-item
      text-decoration none
      color #101215
      font-size 2em

#main-small-container
  display flex
  flex-flow column
  justify-content space-between
  font-family 'Lato', sans-serif
  background-color #101215
  text-align center
  padding 1em 0 0 0
  color white

#main-small
  display flex
  list-style-type none
  margin 0
  padding 1em 0
  font-size 1.2em

  > li
    display flex
    flex-grow 1
    justify-content center
    width 0

    &:before
      color #53B3CB
      margin 0 0.5em 0 0

