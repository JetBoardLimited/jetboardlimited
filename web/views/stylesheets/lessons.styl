@require 'common'

.full-comparison-pricing
  margin 40px 0 0 0
  color #1D2026

.full-comparison-title
  font-family 'Lato', sans-serif
  font-weight: lighter
  font-size 30px
  text-align: center
  letter-spacing 5px

.full-comparison-container
  display flex
  margin 50px auto 0 auto

  > .lesson
    padding 0 40px 0 40px
    min-width: 300px
    width: 33%

    > .lesson-header
      height: 240px
      padding 40px 40px 0 40px
      background-color #1D2026
      color white

      > .title
        margin 0
        font-family 'Lato', sans-serif
        font-size 24px
        letter-spacing 5px
        text-align center
      > .price
        font-family 'Lato', sans-serif
        font-size 54px
        margin 20px 0
        text-align center
      > .description
        font-family 'Lato', sans-serif
        font-size 12px
        line-height 24px
        font-style italic
        color: grey

    > .lesson-features
      list-style-type: none
      margin 0
      padding: 0

      > li
        padding: 20px 30px

        &:nth-child(even)
          background-color: lightgrey
