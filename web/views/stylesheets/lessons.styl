@require 'common'

.full-comparison-title
  font-family 'Lato', sans-serif
  font-weight: lighter
  font-size 2em
  text-align: center
  letter-spacing 5px

.full-comparison-container
  display flex
  margin 3em auto

  > .lesson
    padding 0 2em 0 2em
    min-width: 18em
    width: 33%

    > .lesson-header
      padding 2em
      background-color #101215
      color white

      > .title
        margin 0
        font-family 'Lato', sans-serif
        font-size 1.5em
        letter-spacing 5px
        text-align center
      > .price
        font-family 'Lato', sans-serif
        font-size 54px
        margin 0.5em 0
        text-align center
      > .hour
        font-family 'Lato', sans-serif
        font-size 2rem
        margin 0.5em 0
        text-align center
      > .description
        font-family 'Lato', sans-serif
        font-size 0.75em
        line-height 1.25em
        font-style italic
        color: grey
        text-align center

    > .lesson-features
      list-style-type: none
      margin 0
      padding: 0

      > li
        padding: 1em 2em
        font-weight bold

        &:before
          margin 0 1em 0 0

        &:nth-child(even)
          background-color: #E9E9E9
