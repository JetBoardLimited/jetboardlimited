@require 'common'

.intro
  height 40em
  background-image url('/images/main-background.png')
  background-size 35em, contain
  background-repeat no-repeat
  background-position center

  .intro-plaque-container
    position: absolute
    height: 40em
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    width: 100% 

    .intro-plaque
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      width: 100%
      background-color: white
      padding: 0 0 2em 0
      border: 1px solid #E6E6E6

      .intro-title
        font-family 'Lato', sans-serif
        font-size 3em
        font-weight 300
        color #101215

      .intro-buttons
        display flex

        > .intro-browse
          color white
          background-color #101215
          width 12em
          height 4em
          margin-right 1em
          text-decoration none
          font-size 1.2em
          line-height 2em
          font-family 'Futura', sans-serif
          opacity 0.95
          text-align: center

          &:hover
            background-color rgb(29*0.5, 32*0.5, 38*0.5)
            opacity 1.0

.we-are
  height 550px
  background linear-gradient(rgba(29, 32, 38, 0.78), rgba(29, 32, 38, 0.78)), url('/images/slade-bg.jpg')
  background-position bottom
  background-size cover
  background-repeat no-repeat

  h2
    text-align center
    font-family 'Lato', sans-serif
    font-weight normal
    padding-top 50px
    margin: 0
    font-size 28px
    color white

  > p

    text-align center
    width 610px
    margin 0 auto
    color white
    font-family "Source Sans Pro", Avenir, HelveticaNeue, sans-serif
    font-size 1.250rem
    line-spacing 1.6875rem

.product-ranges
  padding-bottom 50px

  overflow: hidden

  h2
    text-align center
    font-family 'Lato', sans-serif
    font-weight normal
    padding-top 50px
    font-size 36px

  .manufacturers
    margin 0 auto
    padding 50px 0

    .manufacturer
      margin 0 40px

  > p
    text-align center
    width 610px
    margin 50px auto 50px auto
    font-family "Source Sans Pro", Avenir, HelveticaNeue, sans-serif
    font-size 1.250rem
    line-spacing 1.6875rem

  > .range-browse
    display block
    color white
    background-color #101215
    width 290px
    height 90px
    text-decoration none
    text-align center
    font-size 22px
    line-height 90px
    font-family 'Futura', sans-serif
    opacity 0.95
    margin 0 auto

    &:hover
      background-color rgb(29*0.5, 32*0.5, 38*0.5)
      opacity 1.0

.compare-lessons
  height 600px
  background-color #101215
  color white
  padding-bottom 100px

  background linear-gradient(rgba(29, 32, 38, 0.78), rgba(29, 32, 38, 0.78)), url('/images/lessons-bg.png')
  background-position bottom
  background-size cover
  background-repeat no-repeat

  > p
    text-align center
    width 800px
    margin 50px auto 50px auto
    font-family "Source Sans Pro", Avenir, HelveticaNeue, sans-serif
    font-size 1.1rem

  h2
    text-align center
    font-family 'Lato', sans-serif
    font-weight normal
    padding-top 50px
    font-size 42px

  > .comparison-container
    display flex
    width 1000px
    margin 0 auto

    > .lesson
      padding 0 40px

      > .title
        font-family 'Lato', sans-serif
        font-size 24px
        letter-spacing 5px
      > .price
        font-family 'Lato', sans-serif
        font-size 54px
        margin 20px 0
      > .description
        font-family 'Lato', sans-serif
        font-size 20px
        line-height 24px


  .find-out-more
    display block
    color white
    border 4px solid white
    background-color rgba(29, 32, 38, 0.6)
    width 282px
    height 82px
    text-decoration none
    text-align center
    font-size 22px
    line-height 41px
    font-family 'Futura', sans-serif
    opacity 0.95
    margin 40px auto 0 auto

    &:hover
      background-color white
      opacity 1.0
      color #101215

.community
  background-color #101215

  h2
    text-align center
    font-family 'Lato', sans-serif
    font-weight normal
    padding-top 50px
    font-size 36px
    color white
    margin-top 0

.juicer-feed
  width 100%
  overflow hidden

.referral
  visibility hidden
  background-color #101215
